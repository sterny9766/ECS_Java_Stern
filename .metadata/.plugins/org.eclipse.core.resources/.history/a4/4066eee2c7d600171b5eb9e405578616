
public class YourSchedule 
{
		public static void main( String[] args)
		{
			String Per_1, Per_2, Per_3, Per_4, Per_1T, Per_2T, Per_3T, Per_4T;
			Per_1 = "Int Math I HP" ;
			Per_2 = "ExplorCompSci P";
			Per_3 = "English 9 P";
			Per_4 = "YearOnePE/Hlth";
			Per_1T = "Luna";
			Per_2T = "Mauro";
			Per_3T = "Thow";
			Per_4T = "Lackey";
			
			
			System.out.println("Daniel's Class Schedule:");
			System.out.println("------------------------------------");
			System.out.println("| Per 1 |    " + Per_1 + "    | " + Per_1T);
			System.out.println("| Per 2 |  " + Per_2 + " | " + Per_2T);
			System.out.println("| Per 3 |      " + Per_3 + " | " + Per_3T);
			System.out.println("| Per 4 |   " + Per_4 + " | " + Per_4T);
			System.out.println("------------------------------------");
		}

}
